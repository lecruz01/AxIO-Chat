.chat-window
    position absolute
    justify-items stretch
    width 100vw
    top 56px
    left 0
    bottom 116px
    padding 0.5em 1em
    background lightblue
    overflow auto
    .message
        width 100%
        height 40px
        margin 5px 0
        .message-content
            display inline-block
            padding: 0.5em 1em
            border-radius 10px
            background #f2f2f2
            box-shadow 2px 2px 6px #666666
            &.self
                float right
                color #ffffff
                background #ab67de
.message-controls
    position absolute
    bottom 56px
    left 0
    width 100vw
    height 60px
    padding 0 1.5em
    background #ffffff
    .form-group
        margin-bottom 0